<Window x:Class="SGH.Vistas.Horario.Consulta.ConsultaHorarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGH.Vistas.Horario.Consulta"
        mc:Ignorable="d"
        Title="Log In" Height="700" Width="1000" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="/Recursos/Logo_sgh.png">
    <Grid>

        <materialDesign:PackIcon Kind="ArrowULeftBottomBold" Margin="10,10,0,0" Visibility="Visible" Foreground="Black"
                                     Cursor="Hand" Width="58" Height="44" />

        <StackPanel>

            <TextBlock Margin="0 35 0 0" HorizontalAlignment="Center" FontSize="45"
                FontFamily="roboto" Text="Consulta Horarios" FontWeight="Medium"      
                TextWrapping="Wrap" VerticalAlignment="Center"/>
           
            <ComboBox
                x:Name="OutlinedComboBox" Margin="0 15 0 0" Padding="10 15 10 0"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"                
                materialDesign:HintAssist.Hint="Seleccione un grupo"
                ItemsSource="{Binding ShortStringList}"
                Width="788" Height="45" />

            <Grid Name="gridBoard" Height="414" Width="788" Margin="0 40 0 0">
                <ListBox Name="listBoxConsultaHorario" Margin="0" Padding="0" BorderThickness="1" BorderBrush="#D7D7D7">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6" Rows="15"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Grid>

        </StackPanel>


    </Grid>
</Window>
